<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

  <TextView
      android:id="@+id/distanceRemainingText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:textAlignment="textEnd"
      app:layout_constraintBottom_toBottomOf="@+id/tripProgressDivider"
      app:layout_constraintEnd_toStartOf="@id/tripProgressDivider"
      app:layout_constraintTop_toTopOf="@+id/tripProgressDivider"
      tools:text="1056 ft"
      android:textSize="16sp"/>

  <TextView
      android:id="@+id/estimatedTimeToArriveText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="@+id/tripProgressDivider"
      app:layout_constraintStart_toEndOf="@id/tripProgressDivider"
      app:layout_constraintTop_toTopOf="@+id/tripProgressDivider"
      tools:text="4:28 pm"/>

  <View
      android:id="@+id/tripProgressDivider"
      android:layout_width="24dp"
      android:layout_height="1dp"
      android:layout_marginBottom="32dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <TextView
      android:id="@+id/timeRemainingText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintBottom_toTopOf="@id/tripProgressDivider"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="10 min"
      android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>