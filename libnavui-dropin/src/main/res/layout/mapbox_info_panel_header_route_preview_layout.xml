<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@drawable/mapbox_bg_info_panel"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    tools:layout_height="@dimen/mapbox_infoPanel_peekHeight">

    <FrameLayout
        android:id="@+id/tripProgressLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/startNavigationContainer"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_height="60dp"
        tools:background="#00ffcc"/>

    <FrameLayout
        android:id="@+id/startNavigationContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginEnd="10dp"
        tools:layout_height="52dp"
        tools:layout_width="72dp"
        tools:background="#00ccff"/>

</merge>