<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mapbox.navigation.ui.voice.view.MapboxAudioGuidanceButton
            android:id="@+id/soundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/mapbox_actionList_spacing"
            app:extendableButtonIcon="@drawable/mapbox_ic_sound_on"
            tools:visibility="visible" />

        <com.mapbox.navigation.dropin.view.MapboxCameraModeButton
            android:id="@+id/cameraModeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mapbox_actionList_spacing"
            android:layout_marginBottom="@dimen/mapbox_actionList_spacing"/>

        <com.mapbox.navigation.dropin.view.MapboxExtendableButton
            android:id="@+id/recenterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mapbox_actionList_spacing"
            android:layout_marginBottom="@dimen/mapbox_actionList_spacing"
            android:visibility="gone"
            app:extendableButtonIcon="@drawable/mapbox_ic_camera_recenter"
            tools:visibility="visible" />

    </LinearLayout>
</merge>
