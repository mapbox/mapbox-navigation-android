<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NavigationView">
        <!-- Defines the mapbox access token. -->
        <attr name="accessToken" format="string"/>
        <attr name="maneuverView" format="reference"/>
        <attr name="speedLimitView" format="reference"/>
        <attr name="tripProgressView" format="reference"/>
        <attr name="roadNameBackground" format="reference"/>
        <attr name="infoPanelBackground" format="reference"/>
        <attr name="dragHandle" format="reference" />
        <attr name="recenterButton" format="reference" />
        <attr name="audioGuidanceOn" format="reference" />
        <attr name="audioGuidanceOff" format="reference" />
        <attr name="cameraModeButton" format="reference" />
        <attr name="routePreviewButton" format="reference" />
        <attr name="endNavigationButton" format="reference" />
        <attr name="startNavigationButton" format="reference" />
        <attr name="infoPanelPoiTitleTextAppearance" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MapboxCameraModeButton">
        <!-- Tint to apply to the icon drawable. -->
        <attr name="cameraModeButtonIconTint" format="reference|color" />
        <!-- Follow mode icon drawable -->
        <attr name="cameraModeButtonFollowIcon" format="reference" />
        <!-- Overview mode icon drawable -->
        <attr name="cameraModeButtonOverviewIcon" format="reference" />
        <!-- Appearance of a text message. -->
        <attr name="cameraModeButtonTextAppearance" format="reference" />
        <!-- Follow mode text -->
        <attr name="cameraModeButtonOverviewText" format="string" localization="suggested" />
        <!-- Overview mode text -->
        <attr name="cameraModeButtonFollowText" format="string" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="MapboxExtendableButton">
        <!-- Default icon drawable -->
        <attr name="extendableButtonIcon" format="reference" />
        <!-- Tint to apply to the icon drawable. -->
        <attr name="extendableButtonIconTint" format="reference|color" />
        <!-- Appearance of a text message. -->
        <attr name="extendableButtonTextAppearance" format="reference" />
    </declare-styleable>
</resources>