<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="MapboxStylePrimaryManeuver">
    <item name="android:textColor">@color/mapbox_primary_maneuver_text_color</item>
    <item name="android:textSize">30sp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textDirection">locale</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="MapboxStyleSecondaryManeuver">
    <item name="android:textColor">@color/mapbox_secondary_maneuver_text_color</item>
    <item name="android:textSize">24sp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textDirection">locale</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="MapboxStyleSubManeuver">
    <item name="android:textColor">@color/mapbox_sub_maneuver_text_color</item>
    <item name="android:textSize">18sp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textDirection">locale</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="MapboxStyleExitTextForPrimary">
    <item name="android:textSize">30sp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mapbox_exit_text_color</item>
  </style>

  <style name="MapboxStyleExitTextForSecondary">
    <item name="android:textSize">24sp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mapbox_exit_text_color</item>
  </style>

  <style name="MapboxStyleExitTextForSub">
    <item name="android:textSize">18sp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/mapbox_exit_text_color</item>
  </style>

  <style name="MapboxStyleStepDistance">
    <item name="android:textColor">@color/mapbox_step_distance_text_color</item>
    <item name="android:textSize">22sp</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="MapboxStyleTurnIconManeuver">
    <item name="maneuverTurnIconColor">@color/mapbox_turn_icon_color</item>
    <item name="maneuverTurnIconShadowColor">@color/mapbox_turn_icon_shadow_color</item>
  </style>

  <style name="MapboxStyleManeuverView">
    <item name="maneuverViewBackgroundColor">@color/mapbox_main_maneuver_background_color</item>
    <item name="subManeuverViewBackgroundColor">@color/mapbox_sub_maneuver_background_color</item>
    <item name="upcomingManeuverViewBackgroundColor">@color/mapbox_upcoming_maneuver_background_color</item>
    <item name="maneuverViewIconStyle">@style/MapboxStyleTurnIconManeuver</item>
    <item name="laneGuidanceManeuverIconStyle">@style/MapboxStyleTurnIconManeuver</item>
  </style>
</resources>