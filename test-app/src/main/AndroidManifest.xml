<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.mapbox.navigation.examples.core" >
  <uses-permission android:name="android.permission.VIBRATE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name=".MapboxRouteLineApiExampleActivity"
        android:label="@string/title_navigation_route_ui"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".SlackLineActivity"
        android:label="@string/title_navigation_route_ui"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".camera.CameraAnimationsActivity"
        android:label="@string/title_navigation_route_ui"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxSnapshotActivity"
        android:label="@string/title_snapshotter"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxSignboardActivity"
        android:label="@string/title_signboard"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".TripProgressActivity"
        android:label="@string/title_trip_progress">
    </activity>

    <activity
        android:name=".MapboxManeuverActivity"
        android:label="@string/title_maneuver">
    </activity>

    <activity
        android:name=".VoiceActivity"
        android:label="@string/title_voice">
    </activity>

    <activity
        android:name="com.mapbox.navigation.examples.MainActivity"
        android:label="@string/title_navigation_route_ui"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
        <action android:name="android.intent.action.VIEW" />
      </intent-filter>
    </activity>

  </application>

</manifest>