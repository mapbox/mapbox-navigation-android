<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.mapbox.navigation.examples.core" >
  <uses-permission android:name="android.permission.VIBRATE" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name=".MapboxNavigationActivity"
        android:label="@string/title_navigation">
    </activity>

    <activity
        android:name=".MapboxRouteLineActivity"
        android:label="@string/title_route_line"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".camera.MapboxCameraAnimationsActivity"
        android:label="@string/title_camera"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxSnapshotActivity"
        android:label="@string/title_snapshotter"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxSignboardActivity"
        android:label="@string/title_signboard"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxJunctionActivity"
        android:label="@string/title_junction"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxTripProgressActivity"
        android:label="@string/title_trip_progress">
    </activity>

    <activity
        android:name=".MapboxManeuverActivity"
        android:label="@string/title_maneuver">
    </activity>

    <activity
        android:name=".MapboxVoiceActivity"
        android:label="@string/title_voice">
    </activity>

    <activity
        android:name=".replay.HistoryFilesActivity"
        android:label="@string/title_replay" >
      <meta-data
          android:name="android.support.PARENT_ACTIVITY"
          android:value=".ReplayHistoryActivity" />
    </activity>

    <activity
        android:name=".ReplayHistoryActivity"
        android:label="@string/title_replay" >
    </activity>

    <activity
        android:name="com.mapbox.navigation.examples.MainActivity"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
        <action android:name="android.intent.action.VIEW" />
      </intent-filter>
    </activity>

  </application>

</manifest>