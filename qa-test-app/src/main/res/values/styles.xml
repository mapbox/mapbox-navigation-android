<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomStatusView">
        <item name="android:elevation">0dp</item>
        <item name="android:background">#FFEB3B</item>
        <item name="statusViewShowAnimator">@animator/scale_in</item>
        <item name="statusViewHideAnimator">@animator/scale_out</item>
        <item name="statusViewProgressBarTint">#673AB7</item>
        <item name="statusViewIconTint">#673AB7</item>
        <item name="statusViewTextAppearance">@style/CustomStatusView.TextAppearance</item>
    </style>

    <style name="CustomStatusView.TextAppearance">
        <item name="android:textColor">#673AB7</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyCustomTripProgressStyle">
        <item name="timeRemainingTextAppearance">@style/MyCustomTimeRemaining</item>
        <item name="distanceRemainingTextAppearance">@style/MyCustomDistanceRemaining</item>
        <item name="estimatedArrivalTimeTextAppearance">@style/MyCustomEstimatedArrivalTime</item>
        <item name="estimatedArrivalTimeIcon">@drawable/mapbox_ic_estimated_time</item>
        <item name="estimatedArrivalTimeIconTint">@android:color/holo_red_light</item>
    </style>

    <style name="MyCustomTimeRemaining" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyCustomDistanceRemaining" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyCustomEstimatedArrivalTime" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyCustomSpeedLimitStyle">
        <item name="speedLimitTextColor">#FFFFFF</item>
        <item name="speedLimitBackgroundColor">@color/primary</item>
        <item name="speedLimitMutcdBorderColor">@color/secondary</item>
        <item name="speedLimitViennaBorderColor">@color/secondary</item>
    </style>

    <style name="MyCustomSpeedLimitTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MyCustomTurnIconManeuver" parent="MapboxStyleTurnIconManeuver">
        <item name="maneuverTurnIconColor">@android:color/white</item>
        <item name="maneuverTurnIconShadowColor">@color/colorSecondary</item>
    </style>

    <style name="MyCustomPrimaryManeuver" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyCustomSecondaryManeuver" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyCustomSubManeuver" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textDirection">locale</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MyCustomExitTextForPrimary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">28sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MyCustomExitTextForSecondary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MyCustomExitTextForSub" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="MyCustomStepDistance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyCustomRoadNameViewTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCustomCameraModeButton">
        <item name="cameraModeButtonIconTint">@color/primary</item>
        <item name="cameraModeButtonFollowIcon">@drawable/mapbox_ic_camera_follow</item>
        <item name="cameraModeButtonBackground">@drawable/mapbox_bg_action_button_alternative</item>
        <item name="cameraModeButtonOverviewIcon">@drawable/mapbox_ic_camera_overview</item>
        <item name="cameraModeButtonTextAppearance">@style/MapboxCameraModeButtonTextAppearance</item>
        <item name="cameraModeButtonFollowText">@string/mapbox_route_follow</item>
        <item name="cameraModeButtonOverviewText">@string/mapbox_route_overview</item>
    </style>

    <style name="MyCustomAudioGuidanceButton">
        <item name="audioGuidanceButtonIconTint">@color/primary</item>
        <item name="audioGuidanceButtonBackground">@drawable/mapbox_bg_action_button_alternative</item>
        <item name="audioGuidanceButtonMuteIcon">@drawable/mapbox_ic_mute</item>
        <item name="audioGuidanceButtonUnmuteIcon">@drawable/mapbox_ic_unmute</item>
        <item name="audioGuidanceButtonTextAppearance">@style/MapboxAudioGuidanceButtonTextAppearance</item>
        <item name="audioGuidanceButtonMuteText">@string/mapbox_muted</item>
        <item name="audioGuidanceButtonUnmuteText">@string/mapbox_unmuted</item>
    </style>

    <style name="MyCustomRecenterButton">
        <item name="extendableButtonIconTint">@color/primary</item>
        <item name="extendableButtonBackground">@drawable/mapbox_bg_action_button_alternative</item>
        <item name="extendableButtonIcon">@drawable/mapbox_ic_current_location</item>
        <item name="extendableButtonTextAppearance">@style/MapboxExtendableButtonTextAppearance</item>
    </style>

    <style name="MyCustomRoutePreviewButton">
        <item name="extendableButtonIconTint">@color/primary</item>
        <item name="extendableButtonIcon">@drawable/mapbox_ic_route</item>
    </style>

    <style name="MyCustomEndNavigationButton">
        <item name="extendableButtonIconTint">@color/primary</item>
        <item name="extendableButtonIcon">@drawable/mapbox_ic_stop_navigation</item>
    </style>

    <style name="MyCustomStartNavigationButton">
        <item name="extendableButtonIcon">@drawable/mapbox_ic_puck</item>
        <item name="extendableButtonBackground">@drawable/mapbox_bg_action_button</item>
        <item name="extendableButtonTextAppearance">@style/DropInStartButtonTextAppearance</item>
    </style>

</resources>