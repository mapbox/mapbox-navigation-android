<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/feedback_item_margin"
    android:layout_marginTop="@dimen/feedback_item_margin_top"
    android:layout_marginStart="@dimen/feedback_item_margin">

    <ImageView
        android:id="@+id/feedbackImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/feedbackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/feedback_item_margin_top"
        android:layout_marginTop="@dimen/feedback_item_margin_top"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="?attr/navigationViewPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feedbackImage"
        tools:text="Feedback Text"/>

</androidx.constraintlayout.widget.ConstraintLayout>