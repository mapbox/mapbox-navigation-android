<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MapboxSoundButton">
        <!-- Defines the drawable representing sound button mute state. -->
        <attr name="soundButtonMuteDrawable" format="reference" />
        <!-- Defines the drawable representing sound button unmute state. -->
        <attr name="soundButtonUnmuteDrawable" format="reference" />
        <!-- Defines the background of sound button. -->
        <attr name="soundButtonBackground" format="reference|color" />
        <!-- Defines the text color of sound button. -->
        <attr name="soundButtonTextColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MapboxAudioGuidanceButton">
        <!-- Background to apply to the view. -->
        <attr name="audioGuidanceButtonBackground" format="reference|color" />
        <!-- Tint to apply to the icon drawable. -->
        <attr name="audioGuidanceButtonIconTint" format="reference|color" />
        <!-- Follow mode icon drawable -->
        <attr name="audioGuidanceButtonMuteIcon" format="reference" />
        <!-- Overview mode icon drawable -->
        <attr name="audioGuidanceButtonUnmuteIcon" format="reference" />
        <!-- Appearance of a text message. -->
        <attr name="audioGuidanceButtonTextAppearance" format="reference" />
        <!-- Follow mode text -->
        <attr name="audioGuidanceButtonMuteText" format="string" localization="suggested" />
        <!-- Overview mode text -->
        <attr name="audioGuidanceButtonUnmuteText" format="string" localization="suggested" />
    </declare-styleable>
</resources>