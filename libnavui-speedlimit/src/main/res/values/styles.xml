<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MapboxStyleSpeedLimit">
        <item name="speedLimitTextColor">@color/mapbox_speed_limit_text_color</item>
        <item name="speedLimitMutcdBorderColor">@color/mapbox_speed_limit_view_mutcd_border</item>
        <item name="speedLimitBackgroundColor">@color/mapbox_speed_limit_view_background</item>
        <item name="speedLimitViennaBorderColor">@color/mapbox_speed_limit_view_vienna_border</item>
    </style>

    <style name="MapboxSpeedInfoMutcdLegendStyle">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MapboxSpeedInfoMutcdUnitStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MapboxSpeedInfoPostedSpeedMutcdStyle">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MapboxSpeedInfoCurrentSpeedMutcdStyle">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/mapbox_current_speed_color</item>
    </style>

    <style name="MapboxSpeedInfoPostedSpeedViennaStyle">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MapboxSpeedInfoCurrentSpeedViennaStyle">
        <item name="android:textSize">32dp</item>
        <item name="android:textColor">@color/mapbox_current_speed_color</item>
    </style>
</resources>