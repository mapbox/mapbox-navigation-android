<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.mapbox.navigation.examples.core" >
  <uses-permission android:name="android.permission.VIBRATE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name=".MapboxNavigationActivity"
        android:label="@string/title_navigation">
    </activity>

    <activity
        android:name=".MapboxRouteLineAndArrowActivity"
        android:label="@string/title_route_line"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".camera.MapboxCameraAnimationsActivity"
        android:label="@string/title_camera"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxSignboardActivity"
        android:label="@string/title_signboard"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxJunctionActivity"
        android:label="@string/title_junction"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name=".MapboxTripProgressActivity"
        android:label="@string/title_trip_progress">
    </activity>

    <activity
        android:name=".MapboxManeuverActivity"
        android:label="@string/title_maneuver">
    </activity>

    <activity
        android:name=".MapboxVoiceActivity"
        android:label="@string/title_voice">
    </activity>

    <activity
        android:name=".replay.HistoryFilesActivity"
        android:label="@string/title_replay" >
    </activity>

    <activity
        android:name=".ReplayHistoryActivity"
        android:label="@string/title_replay" >
    </activity>

    <activity
        android:name=".MapboxCustomStyleActivity"
        android:label="@string/title_custom_style" >
    </activity>

    <activity
        android:name=".MapboxMultipleArrowActivity"
        android:label="@string/title_multiple_arrows" >
    </activity>

    <activity
        android:name="com.mapbox.navigation.examples.util.RouteDrawingActivity"
        android:label="@string/title_draw_utility" >
    </activity>

    <activity
        android:name=".IndependentRouteGenerationActivity"
        android:label="@string/title_independent_route">
    </activity>

    <activity
        android:name=".MapboxBuildingHighlightActivity"
        android:label="@string/title_building_highlight">
    </activity>

    <activity
        android:name=".MultiLegRouteExampleActivity"
        android:label="@string/title_multileg_route">
    </activity>

    <activity
        android:name=".MapboxDropInActivity"
        android:label="@string/title_drop_in"
        android:screenOrientation="portrait">
    </activity>

    <activity
        android:name="com.mapbox.navigation.examples.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
        <action android:name="android.intent.action.VIEW" />
      </intent-filter>
    </activity>

  </application>

</manifest>