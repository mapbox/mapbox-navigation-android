<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="MapboxCustomTripProgressStyle" parent="MapboxStyleTripProgressView">
        <item name="tripProgressTextColor">#0D6E65</item>
        <item name="tripProgressViewBackgroundColor">#EEEEEE</item>
    </style>

    <style name="MapboxCustomManeuverTurnIconStyle" parent="MapboxStyleTurnIconManeuver">
        <item name="maneuverTurnIconColor">#FFEB3B</item>
        <item name="maneuverTurnIconShadowColor">#7A6E03</item>
    </style>

    <style name="MapboxCustomManeuverStyle" parent="MapboxStyleManeuverView">
        <item name="maneuverViewBackgroundColor">#058A0A</item>
        <item name="subManeuverViewBackgroundColor">#046808</item>
        <item name="upcomingManeuverViewBackgroundColor">#046808</item>
        <item name="maneuverViewIconStyle">@style/MapboxCustomManeuverTurnIconStyle</item>
        <item name="upcomingManeuverListIconStyle">@style/MapboxCustomManeuverTurnIconStyle</item>
        <item name="laneGuidanceManeuverIconStyle">@style/MapboxCustomManeuverTurnIconStyle</item>
    </style>

    <style name="MapboxCustomSpeedLimitStyle" parent="MapboxStyleSpeedLimit">
        <item name="speedLimitTextColor">#FFFFFF</item>
        <item name="speedLimitMutcdBorderColor">#5D73F6</item>
        <item name="speedLimitBackgroundColor">#160239</item>
        <item name="speedLimitViennaBorderColor">#2A47F4</item>
    </style>

    <style name="ExpandedToolbarStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedToolbarStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
