    <style name="MapboxStyleSummaryBottomSheet">
        <item name="summaryBottomSheetPrimaryColor">?attr/navigationViewPrimary</item>
        <item name="summaryBottomSheetSecondaryColor">?attr/navigationViewSecondary</item>
