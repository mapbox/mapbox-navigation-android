<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NavigationMapRoute">
        <!-- Colors -->
        <item name="routeColor">@color/mapbox_navigation_route_layer_blue</item>
        <item name="routeModerateCongestionColor">
            @color/mapbox_navigation_route_layer_congestion_yellow
        </item>
        <item name="routeSevereCongestionColor">
            @color/mapbox_navigation_route_layer_congestion_red
        </item>
        <item name="routeShieldColor">@color/mapbox_navigation_route_shield_layer_color</item>

        <!-- Scales -->
        <item name="routeScale">1.0</item>
        <item name="upcomingManeuverArrowColor">
            @color/mapbox_navigation_route_upcoming_maneuver_arrow_color
        </item>
        <item name="upcomingManeuverArrowBorderColor">
            @color/mapbox_navigation_route_upcoming_maneuver_arrow_border_color
        </item>

        <!-- Expression styling -->
        <item name="roundedLineCap">true</item>
    </style>

    <style name="NavigationViewLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="navigationViewPrimary">@color/mapbox_navigation_view_color_primary</item>
        <item name="navigationViewSecondary">@color/mapbox_navigation_view_color_secondary</item>
        <item name="navigationViewAccent">@color/mapbox_navigation_view_color_accent</item>
        <item name="navigationViewPrimaryText">@color/mapbox_navigation_view_color_primary_text
        </item>
        <item name="navigationViewSecondaryText">@color/mapbox_navigation_view_color_accent_text
        </item>
        <item name="navigationViewDivider">@color/mapbox_navigation_view_color_divider</item>

        <item name="navigationViewListBackground">
            @color/mapbox_navigation_view_color_list_background
        </item>

        <item name="navigationViewBannerBackground">
            @color/mapbox_navigation_view_color_banner_background
        </item>
        <item name="navigationViewBannerPrimaryText">
            @color/mapbox_navigation_view_color_banner_primary_text
        </item>
        <item name="navigationViewBannerSecondaryText">
            @color/mapbox_navigation_view_color_banner_secondary_text
        </item>
        <item name="navigationViewBannerManeuverPrimary">
            @color/mapbox_navigation_view_color_banner_maneuver_primary
        </item>
        <item name="navigationViewBannerManeuverSecondary">
            @color/mapbox_navigation_view_color_banner_maneuver_secondary
        </item>

        <item name="navigationViewProgress">@color/mapbox_navigation_view_color_progress</item>
        <item name="navigationViewProgressBackground">
            @color/mapbox_navigation_view_color_progress_background
        </item>

        <item name="navigationViewRouteStyle">@style/NavigationMapRoute</item>

        <item name="navigationViewLocationLayerStyle">@style/NavigationLocationLayerStyle</item>

        <item name="navigationViewDestinationMarker">@drawable/map_marker_light</item>

        <item name="navigationViewRouteOverviewDrawable">@drawable/ic_route_preview</item>

        <item name="navigationViewMapStyle">@string/navigation_guidance_day</item>
    </style>

    <style name="NavigationViewDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="navigationViewPrimary">@color/mapbox_navigation_view_color_primary_dark</item>
        <item name="navigationViewSecondary">@color/mapbox_navigation_view_color_secondary_dark
        </item>
        <item name="navigationViewAccent">@color/mapbox_navigation_view_color_accent_dark</item>
        <item name="navigationViewPrimaryText">
            @color/mapbox_navigation_view_color_primary_text_dark
        </item>
        <item name="navigationViewSecondaryText">
            @color/mapbox_navigation_view_color_accent_text_dark
        </item>
        <item name="navigationViewDivider">@color/mapbox_navigation_view_color_divider_dark</item>

        <item name="navigationViewListBackground">
            @color/mapbox_navigation_view_color_list_background_dark
        </item>

        <item name="navigationViewBannerBackground">
            @color/mapbox_navigation_view_color_banner_background_dark
        </item>
        <item name="navigationViewBannerPrimaryText">
            @color/mapbox_navigation_view_color_banner_primary_text_dark
        </item>
        <item name="navigationViewBannerSecondaryText">
            @color/mapbox_navigation_view_color_banner_secondary_text_dark
        </item>
        <item name="navigationViewBannerManeuverPrimary">
            @color/mapbox_navigation_view_color_banner_maneuver_primary_dark
        </item>
        <item name="navigationViewBannerManeuverSecondary">
            @color/mapbox_navigation_view_color_banner_maneuver_secondary_dark
        </item>

        <item name="navigationViewProgress">@color/mapbox_navigation_view_color_progress_dark</item>
        <item name="navigationViewProgressBackground">
            @color/mapbox_navigation_view_color_progress_background_dark
        </item>

        <item name="navigationViewRouteStyle">@style/NavigationMapRoute</item>

        <item name="navigationViewLocationLayerStyle">@style/NavigationLocationLayerStyle</item>

        <item name="navigationViewDestinationMarker">@drawable/map_marker_dark</item>

        <item name="navigationViewRouteOverviewDrawable">@drawable/ic_route_preview_dark</item>

        <item name="navigationViewMapStyle">@string/navigation_guidance_night</item>
    </style>

    <style name="NavigationLocationLayerStyle" parent="@style/mapbox_LocationComponent">
        <item name="mapbox_trackingAnimationDurationMultiplier">2.0</item>
        <item name="mapbox_trackingGesturesManagement">true</item>
    </style>

    <!-- Default InstructionView style -->
    <style name="InstructionView">
        <item name="instructionViewPrimaryBackgroundColor">?attr/navigationViewBannerBackground
        </item>
        <item name="instructionViewSecondaryBackgroundColor">?attr/navigationViewSecondary</item>
        <item name="instructionListViewBackgroundColor">?attr/navigationViewListBackground</item>
        <item name="instructionViewPrimaryTextColor">?attr/navigationViewBannerPrimaryText</item>
        <item name="instructionViewSecondaryTextColor">?attr/navigationViewBannerSecondaryText
        </item>
        <item name="instructionManeuverViewPrimaryColor">?attr/navigationViewBannerManeuverPrimary
        </item>
        <item name="instructionManeuverViewSecondaryColor">
            ?attr/navigationViewBannerManeuverSecondary
        </item>
    </style>

    <!-- Default SoundButton style -->
    <style name="SoundButton">
        <item name="soundButtonPrimaryColor">?attr/navigationViewPrimary</item>
        <item name="soundButtonSecondaryColor">?attr/navigationViewSecondary</item>
    </style>

    <!-- Default FeedbackButton style -->
    <style name="FeedbackButton">
        <item name="feedbackButtonPrimaryColor">?attr/navigationViewPrimary</item>
        <item name="feedbackButtonSecondaryColor">?attr/navigationViewSecondary</item>
    </style>

    <!-- Default AlertView style -->
    <style name="AlertView">
        <item name="alertViewBackgroundColor">?attr/navigationViewBannerBackground</item>
        <item name="alertViewProgressBarBackgroundColor">?attr/navigationViewProgressBackground
        </item>
        <item name="alertViewProgressBarColor">?attr/navigationViewProgress</item>
        <item name="alertViewTextColor">?attr/navigationViewBannerPrimaryText</item>
    </style>

    <!-- Default RecenterButton style -->
    <style name="RecenterButton">
        <item name="recenterButtonPrimaryColor">?attr/navigationViewPrimary</item>
        <item name="recenterButtonSecondaryColor">?attr/navigationViewAccent</item>
    </style>

    <!-- Default WayNameView style -->
    <style name="WayNameView">
        <item name="wayNameViewPrimaryColor">?attr/navigationViewPrimary</item>
        <item name="wayNameViewSecondaryColor">?attr/navigationViewAccent</item>
    </style>

    <!-- Default SummaryBottomSheet style -->
    <style name="SummaryBottomSheet">
        <item name="summaryBottomSheetPrimaryColor">?attr/navigationViewPrimary</item>
        <item name="summaryBottomSheetSecondaryColor">?attr/navigationViewSecondary</item>
        <item name="summaryBottomSheetDividerColor">?attr/navigationViewDivider</item>
        <item name="summaryBottomSheetProgressBarColor">?attr/navigationViewAccent</item>
        <item name="summaryBottomSheetRouteOverviewDrawable">
            ?attr/navigationViewRouteOverviewDrawable
        </item>
        <item name="summaryBottomSheetPrimaryTextColor">?attr/navigationViewPrimaryText</item>
        <item name="summaryBottomSheetSecondaryTextColor">?attr/navigationViewSecondaryText</item>
    </style>

    <style name="MapboxTextViewStyle" parent="android:TextAppearance" />

    <style name="FeedbackBottomSheetTitle" parent="MapboxTextViewStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_primary_text</item>
        <item name="android:layout_marginStart">
            @dimen/mapbox_feedback_bottom_sheet_top_banner_title_margin_start
        </item>
    </style>

    <style name="FeedbackBottomSheetIssueListLayout">
        <item name="android:background">@drawable/mapbox_feedback_bottom_issue_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="FeedbackBottomSheetIssueListTitle" parent="MapboxTextViewStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/dimen_8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_secondary_text</item>
    </style>

    <style name="FeedbackBottomSheetIssueDescriptionText" parent="MapboxTextViewStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_secondary_text</item>
    </style>

    <style name="FeedbackBottomSheetTopBanner">
        <item name="android:background">@color/mapbox_feedback_bottom_sheet_primary</item>
    </style>

    <style name="FeedbackBottomSheetDescriptionItemViewHolder">
        <item name="android:background">@drawable/mapbox_feedback_bottom_issue_background</item>
    </style>

    <style name="FeedbackBottomSheetDescriptionItemText" parent="MapboxTextViewStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_secondary_text</item>
    </style>

    <style name="FeedbackBottomSheetDescriptionItemCheckbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/mapbox_feedback_bottom_sheet_icon_secondary</item>
        <item name="colorControlActivated">@color/mapbox_feedback_bottom_sheet_icon_secondary</item>
    </style>

</resources>