    </style>

    <style name="MapboxStyleTextView" parent="android:TextAppearance" />

    <style name="MapboxStyleFeedbackBottomSheetTitle" parent="MapboxStyleTextView">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_primary_text</item>
        <item name="android:layout_marginStart">
            @dimen/mapbox_feedback_bottom_sheet_top_banner_title_margin_start
        </item>
    </style>

    <style name="MapboxStyleFeedbackBottomSheetIssueListLayout">
        <item name="android:background">@drawable/mapbox_bg_feedback_issue_list</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="MapboxStyleFeedbackBottomSheetIssueListTitle" parent="MapboxStyleTextView">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/mapbox_dimen_8dp</item>
        <item name="android:paddingBottom">@dimen/mapbox_dimen_8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_secondary_text</item>
    </style>

    <style name="MapboxStyleFeedbackBottomSheetIssueDescriptionText" parent="MapboxStyleTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_secondary_text</item>
    </style>

    <style name="MapboxStyleFeedbackBottomSheetTopBanner">
        <item name="android:background">@color/mapbox_feedback_bottom_sheet_primary</item>
    </style>

    <style name="MapboxStyleFeedbackBottomSheetDescriptionItem">
        <item name="android:background">@drawable/mapbox_bg_feedback_issue_list</item>
    </style>

    <style name="MapboxStyleFeedbackBottomSheetDescriptionItemText" parent="MapboxStyleTextView">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mapbox_feedback_bottom_sheet_secondary_text</item>
    </style>

    <style name="MapboxStyleFeedbackBottomSheetDescriptionItemCheckbox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/mapbox_feedback_bottom_sheet_icon_secondary</item>
        <item name="colorControlActivated">@color/mapbox_feedback_bottom_sheet_icon_secondary</item>
    </style>

