        <item>13</item>
        <item>16</item>
        <item>19</item>
        <item>22</item>
    </string-array>

    <string-array name="routeLineTrafficScaleMultiplierArray">
        <item>3</item>
        <item>4</item>
        <item>6</item>
        <item>10</item>
        <item>14</item>
        <item>18</item>
    </string-array>

    <string-array name="routeLineTrafficScalesArray">
        <item>1</item>
        <item>1</item>
        <item>1</item>
        <item>1</item>
