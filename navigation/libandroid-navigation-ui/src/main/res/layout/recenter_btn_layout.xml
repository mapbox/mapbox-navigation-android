<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/recenter_btn_background"
    app:elevation="2dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_navigation"
        android:tint="@color/mapbox_plugin_navigation_route_default_blue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="@color/mapbox_plugin_navigation_route_default_blue"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/re_center"/>

</LinearLayout>
