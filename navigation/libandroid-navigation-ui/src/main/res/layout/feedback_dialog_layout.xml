<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/feedback_dialog_background">

    <LinearLayout
        android:id="@+id/accidentLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/feedback_item_red_background"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_car_crash"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/feedback_accident"
            android:textColor="@color/md_grey_500"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hazardLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="48dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accidentLayout"
        app:layout_constraintTop_toTopOf="@+id/accidentLayout">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/feedback_item_red_background"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_hazard"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/feedback_hazard"
            android:textColor="@color/md_grey_500"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/roadClosedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/accidentLayout"
        app:layout_constraintStart_toStartOf="@+id/accidentLayout"
        app:layout_constraintTop_toBottomOf="@+id/accidentLayout">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/feedback_item_orange_background"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_road_closed"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/feedback_closure"
            android:textColor="@color/md_grey_500"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notAllowedLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/hazardLayout"
        app:layout_constraintStart_toStartOf="@+id/hazardLayout"
        app:layout_constraintTop_toBottomOf="@+id/hazardLayout">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/feedback_item_orange_background"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_turn_not_allowed"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/feedback_not_allowed"
            android:textColor="@color/md_grey_500"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/confusingLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/roadClosedLayout"
        app:layout_constraintStart_toStartOf="@+id/roadClosedLayout"
        app:layout_constraintTop_toBottomOf="@+id/roadClosedLayout">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/feedback_item_orange_background"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_routing_error"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/feedback_confusing"
            android:textColor="@color/md_grey_500"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/notAllowedLayout"
        app:layout_constraintStart_toStartOf="@+id/notAllowedLayout"
        app:layout_constraintTop_toBottomOf="@+id/notAllowedLayout">

        <LinearLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/feedback_item_orange_background"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_more_horiz"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/feedback_other"
            android:textColor="@color/md_grey_500"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/feedback_cancel_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confusingLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            android:text="@string/feedback_cancel"
            android:textColor="@color/md_grey_500"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>