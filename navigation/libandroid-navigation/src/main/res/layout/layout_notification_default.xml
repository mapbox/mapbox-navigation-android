<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/TextAppearance.StatusBar.EventContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4882C6"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/maneuverSignal"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_maneuver_arrive"
        android:tint="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notificationStepDistanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:text="250 ft - "/>

            <TextView
                android:id="@+id/notificationStreetNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:text="Sherman Ave NW"/>
        </LinearLayout>

        <TextView
            android:id="@+id/estimatedArrivalTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:text="11:13 AM ETA"/>
    </LinearLayout>
</LinearLayout>
