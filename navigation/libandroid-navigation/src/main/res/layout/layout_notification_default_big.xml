<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/TextAppearance.StatusBar.EventContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4882C6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/maneuverSignal"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_maneuver_arrive"
            android:tint="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/notificationStepDistanceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:text="250 ft"/>

            <TextView
                android:id="@+id/notificationStreetNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="#ffffff"
                tools:text="Sherman Ave NW"/>

            <TextView
                android:id="@+id/estimatedArrivalTimeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="14sp"
                tools:text="11:13 AM ETA"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="72dp"
        android:alpha="0.35"
        android:background="#ffffff"/>

    <Button
        android:id="@+id/endNavigationButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="72dp"
        android:background="@android:color/transparent"
        android:gravity="start|center_vertical"
        android:text="@string/end_navigation"
        android:textColor="#ffffff"/>
</LinearLayout>